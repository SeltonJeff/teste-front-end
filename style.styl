    @font-face
        font-family: Gilroy; 
        src: url(./resources/font/SVN-Gilroy\ Regular.ttf);

    input-color = rgba(38,147,255, 0.4);

    primary-color = rgb(38,147,255);
    primary-text-color = rgb(255,255,255);

    seccondary-color = rgb(255,255,255);
    seccondary-text-color = rgb(0,0,0)

    tasks-background-color = rgb(233,244,251);
    menu-item-hover = rgb(17,130,242);
    group-list-background-color = rgb(244,251,255);

    :root
        --primary-color: primary-color;
    
    *
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Gilroy, sans-serif;

    .centralize
        justify-content: center;
        align-items: center;
    
    .container
        display: flex;
    
    .direction-col
        flex-direction: column;
    
    .direction-row
        flex-direction: row;

    input
        border: 2px solid input-color;
        border-radius: 4px;
        height: 36px;
        outline: 0;
        width: 250px;

    input:focus
        border: 2px solid primary-color

    .menu-item
        width: 100%;
        z-index: 1;

    .menu-item:hover
        background-color: menu-item-hover;


@media (min-width: 800px)

    .full-height
        height: 100vh;
    
    .full-width
        width: 70vw
    
    .primary-color
        background-color: primary-color;
        color: primary-text-color;
    
    .secondary-color
        background-color: seccondary-color;
        color: seccondary-text-color;
    
    h1
        font-size: 0.7em;
        margin-bottom: 5px;
    
    #login-logo
        width: 30vw;

    .profile
        display: flex;

    .profile-image
        width: 40px;
        height: 40px;
        object-fit: cover;
        border-radius: 40px;
        margin: auto;

    .profile-description
        margin: auto; 
        margin-left: 5px; 
        margin-right: 10px;

    .profile-name
        font-weight: bold; 
        font-size: 0.8em;

    .profile-rule
        color: primary-color;
        font-weight: bold; 
        font-size: 0.7em;

    .tasks
        background-color: tasks-background-color;
        height: 100vh;
        width: 100vw;

    .my-tasks-label
        font-size: 1em;
        font-weight: bold;

    .header-profile
        display: flex;
        justify-content: flex-end;
        height: 60px;
        box-shadow: 1px -4px 10px gray;
        z-index: 2;

    .group-list
        padding-left: 30px;
        background-color: #f4fbff;
        align-items: flex-start;
        width: 20%;
        font-size: 0.7em;
        font-weight: bold;

    #category
        margin-bottom: 30px;

@media (max-width: 799px)

    input-border-color = rgba(38,147,255, 0.4);
    button-text-color = white;

    m-color = rgb(38,147,255);
    m-font-color = white;


    @font-face
        font-family: Gilroy;
        src: url(./resources/font/SVN-Gilroy\ Regular.ttf);
    
    *
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Gilroy, sans-serif;
    
    .m-teme
        background-color: m-color;
        color: m-font-color;

    .full-height
        height: 100vh;
    
    .full-width
        width: 100vw

    h1
        font-size: 0.7em;
        margin-bottom: 5px;
    
    #login-logo
        position: absolute;
        width: 100vw;
        justify-content: center;
        align-items: center;
        padding-top: 50px;
        text-align: center;

    .login
        z-index: 1;

    .profile
        display: inline-flex;

    .menu
        display: none;

    .group-list
        display: none;
    